@{
}
@model List<LibraryPortal.Web.Models.Entities.User>
<h1> Information </h1>

<table class="table">
    <thead>
        <th>Id</th>
        <th>Author</th>
        <th>Title</th>
        <th>Name</th>
        <th>PhoneNo</th>
        <th>Edit</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Author</td>
                <td>@item.Title</td>
                <td>@item.Name</td>
                <td>@item.PhoneNo</td>
                <td><a class="btn btn-primary" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>