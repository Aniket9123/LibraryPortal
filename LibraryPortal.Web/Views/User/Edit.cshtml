@{
}

@model LibraryPortal.Web.Models.Entities.User

@if (Model is null)
{
    <p>No customer is found with this Id</p>
}
else {
<form method="post">
    <div class="container">

        <h1> Edit Details</h1>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Id</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" asp-for="Id" readonly />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Author</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" asp-for="Author" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" asp-for="Title" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" asp-for="Name" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">PhoneNo</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" asp-for="PhoneNo" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="User">Delete Info</button>
        </div>
    </div>
</form>
}
